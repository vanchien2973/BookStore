@model IEnumerable<BookStore.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div style="width: fit-content;">
    <h1>Category</h1>
    
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead class="text-center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Function
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" ><i class="fa-regular fa-pen-to-square"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" ><i class="fa-solid fa-circle-info"></i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" ><i class="fa-solid fa-trash-can"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>