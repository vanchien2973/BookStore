@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "Store";
}

<h2 class="my-4">Store</h2>

<div class="row">
    @foreach (var book in Model)
    {
        <div class="col-3">
            <div class="card">
                <a asp-controller="Store" asp-action="Details" asp-route-id="@book.Id">
                    <img src="~/images/@book.ImagePath" width="300" height="300" style="object-fit: cover"/>
                    <div class="card-body" style="height: 6em;">
                        <h5 class="mb-3">@book.Title</h5>
                    </div>
                    <div class="card-body">
                        <span class="card-text">@book.Price.ToString("c")</span>
                        <a asp-controller="" asp-action="" asp-route-id="@book.Id" class="btn btn-primary float-right"><i class="fa-solid fa-cart-plus"></i></a>
                    </div>
                </a>
            </div>
        </div>
    }
</div>
