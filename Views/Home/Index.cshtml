@{
    ViewData["Title"] = "Home Page";
}
<main>
    <section class="slick-slideshow">
        <div class="slick-custom">
            <img src="images/slides/slide01.png" class="img-fluid" alt="">
            <div class="slick-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6 col-10">
                            <h1 class="slick-title">FPT Shop</h1>
                            <a asp-area="" asp-controller="Store" asp-action="Index" class="btn custom-btn">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="slick-custom">
            <img src="images/slides/slide02.png" class="img-fluid" alt="">
        </div>
    </section>
    <section class="featured-product section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="mb-5">Books List</h2>
                </div>
                <div class="row">
                    @foreach (var book in Model)
                    {
                        <div class="col-3 mt-3">
                            <div class="card store-card">
                                <a class="a-cleanup" asp-controller="Home" asp-action="Details" asp-route-id="@book.Id">
                                    <img src="~/images/@book.ImagePath" class="card-img-top card-img-custom"/>
                                    <div class="card-body" style="height: 6em;">
                                        <h8 class="mb-3">@book.Title</h8>
                                        <p class="text-author">Author: @book.Author</p>
                                    </div>
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <span class="card-text">Price: @book.Price $</span>
                                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@book.Id" class="btn btn-light store-btn-1">
                                            <i class="fa-solid fa-cart-plus"></i>
                                        </a>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-12 text-center mt-4">
                    <a href="/Store" class="view-all">View All Books</a>
                </div>
            </div>
        </div>
    </section>
</main>